@import 'nib'

html, body, .full-height
    height: 100%

body
    padding: 20px 50px 0px

.row.upper
    height: 85%

.row.footer
    height: 15%

#list
    overflow: auto
    max-height: 80%

.editor-container
    position: relative

#editor, .CodeMirror
    box-shadow: 0px 0px 5px 5px rgba(0, 0, 0, 0.4);

#editor.shareJSAce, .CodeMirror
  position: absolute
  left: 0
  right: 0
  top: 60px
  bottom: 0

#editor.shareJSText, .CodeMirror
  width: 100%
  height: 80%
